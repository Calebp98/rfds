---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const rfds = await getCollection("rfds");
const sortedRfds = rfds.sort(
  (a, b) => parseInt(a.data.number) - parseInt(b.data.number)
);

// Get all unique tags
const allTags = [...new Set(sortedRfds.flatMap((rfd) => rfd.data.tags))].sort();

// Get all unique authors
const allAuthors = [...new Set(sortedRfds.map((rfd) => rfd.data.author))].sort();
---

<BaseLayout title="Index">
  <div class="index">
    <h1 class="site-title">RFD INDEX</h1>
    <p class="subtitle">
      Research ideas and open problems in AI infra security.
    </p>

    <div class="search-container">
      <input
        type="text"
        id="search-input"
        class="search-input"
        placeholder="Search by title, author, or tag..."
      />
    </div>

    <div class="filters">
      <div class="filter-group">
        <span class="filter-label">FILTER BY TAG:</span>
        <div class="tag-filters">
          <button class="tag-filter active" data-tag="all">all</button>
          {allTags.map((tag) => (
            <button class="tag-filter" data-tag={tag}>{tag}</button>
          ))}
        </div>
      </div>
      <div class="filter-group">
        <span class="filter-label">FILTER BY AUTHOR:</span>
        <div class="author-filters">
          <button class="author-filter active" data-author="all">all</button>
          {allAuthors.map((author) => (
            <button class="author-filter" data-author={author}>{author}</button>
          ))}
        </div>
      </div>
    </div>

    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th class="col-num">#</th>
            <th class="col-title">TITLE</th>
            <th class="col-author">AUTHOR</th>
            <th class="col-state">STATE</th>
          </tr>
        </thead>
        <tbody>
          {
            sortedRfds.map((rfd) => (
              <tr data-tags={rfd.data.tags.join(",")} data-author={rfd.data.author} data-title={rfd.data.title}>
                <td class="col-num">{rfd.data.number}</td>
                <td class="col-title">
                  <a
                    href={`${import.meta.env.BASE_URL}rfd/${rfd.data.number}/`}
                  >
                    {rfd.data.title}
                  </a>
                </td>
                <td class="col-author">{rfd.data.author}</td>
                <td class="col-state">
                  <span class={`state state-${rfd.data.state}`}>
                    {rfd.data.state}
                  </span>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>

    <div class="no-results" style="display: none;">
      No RFDs match the current filters.
    </div>
  </div>
</BaseLayout>

<script>
  const tagButtons = document.querySelectorAll('.tag-filter');
  const authorButtons = document.querySelectorAll('.author-filter');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const rows = document.querySelectorAll('tbody tr');
  const noResults = document.querySelector('.no-results') as HTMLElement;

  let activeTag = 'all';
  let activeAuthor = 'all';
  let searchQuery = '';

  function filterRows() {
    let visibleCount = 0;
    const query = searchQuery.toLowerCase();

    rows.forEach(row => {
      const rowTags = row.getAttribute('data-tags')?.split(',') || [];
      const rowAuthor = row.getAttribute('data-author') || '';
      const rowTitle = row.getAttribute('data-title') || '';
      const tr = row as HTMLElement;

      const tagMatch = activeTag === 'all' || rowTags.includes(activeTag);
      const authorMatch = activeAuthor === 'all' || rowAuthor === activeAuthor;

      // Search matches title, author, or any tag
      const searchMatch = query === '' ||
        rowTitle.toLowerCase().includes(query) ||
        rowAuthor.toLowerCase().includes(query) ||
        rowTags.some(tag => tag.toLowerCase().includes(query));

      if (tagMatch && authorMatch && searchMatch) {
        tr.style.display = '';
        visibleCount++;
      } else {
        tr.style.display = 'none';
      }
    });

    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      activeTag = button.getAttribute('data-tag') || 'all';
      tagButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      filterRows();
    });
  });

  authorButtons.forEach(button => {
    button.addEventListener('click', () => {
      activeAuthor = button.getAttribute('data-author') || 'all';
      authorButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      filterRows();
    });
  });

  searchInput.addEventListener('input', () => {
    searchQuery = searchInput.value;
    filterRows();
  });
</script>

<style>
  .site-title {
    font-family: "Departure Mono", monospace;
    font-size: 33px;
    color: var(--blue);
    margin: 0 0 0.75rem 0;
    letter-spacing: 0.1em;
  }

  .subtitle {
    color: var(--text-muted);
    margin: 0 0 2rem 0;
    font-family: "IBM Plex Mono", monospace;
    font-size: 14px;
  }

  .search-container {
    margin-bottom: 1.5rem;
  }

  .search-input {
    width: 100%;
    padding: 0.75rem 1rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 13px;
    background: var(--bg-primary);
    border: 2px solid var(--border);
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.15s;
  }

  .search-input::placeholder {
    color: var(--text-muted);
  }

  .search-input:focus {
    border-color: var(--blue);
  }

  .filters {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
  }

  .filter-label {
    display: block;
    font-family: "IBM Plex Mono", monospace;
    font-size: 10px;
    color: var(--purple);
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
  }

  .tag-filters,
  .author-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-filter,
  .author-filter {
    font-family: "IBM Plex Mono", monospace;
    font-size: 11px;
    padding: 0.25rem 0.6rem;
    background: var(--bg-primary);
    border: 1px solid rgba(123, 104, 201, 0.3);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.15s;
  }

  .tag-filter {
    text-transform: lowercase;
  }

  .tag-filter:hover,
  .author-filter:hover {
    border-color: var(--purple);
    color: var(--purple);
    background: rgba(123, 104, 201, 0.05);
  }

  .tag-filter.active,
  .author-filter.active {
    background: rgba(123, 104, 201, 0.15);
    border-color: var(--purple);
    color: var(--purple);
    border-width: 2px;
    padding: calc(0.25rem - 1px) calc(0.6rem - 1px);
  }

  .table-wrapper {
    border: 2px solid var(--blue);
    position: relative;
  }

  .table-wrapper::before {
    content: "+";
    position: absolute;
    top: -10px;
    left: -10px;
    color: var(--blue);
    font-family: "IBM Plex Mono", monospace;
    font-size: 14px;
    font-weight: bold;
  }

  .table-wrapper::after {
    content: "+";
    position: absolute;
    bottom: -10px;
    right: -10px;
    color: var(--blue);
    font-family: "IBM Plex Mono", monospace;
    font-size: 14px;
    font-weight: bold;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: rgba(74, 125, 201, 0.08);
    border-bottom: 2px solid var(--blue);
  }

  th {
    padding: 0.75rem 1rem;
    text-align: left;
    font-family: "IBM Plex Mono", monospace;
    font-size: 11px;
    font-weight: 600;
    color: var(--blue);
    letter-spacing: 0.1em;
  }

  tr {
    border-bottom: 1px solid var(--border);
  }

  tbody tr:last-child {
    border-bottom: none;
  }

  tbody tr:hover {
    background: rgba(74, 125, 201, 0.04);
  }

  td {
    padding: 0.875rem 1rem;
    vertical-align: baseline;
  }

  .col-num {
    width: 60px;
    font-family: "IBM Plex Mono", monospace;
    color: var(--blue);
    font-size: 13px;
    font-weight: 500;
  }

  .col-title {
    padding-right: 1.5rem;
  }

  .col-title a {
    color: var(--text-primary);
    font-family: "IBM Plex Mono", monospace;
    font-size: 14px;
  }

  .col-title a:hover {
    color: var(--blue);
  }

  .col-author {
    font-family: "IBM Plex Mono", monospace;
    font-size: 12px;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .col-state {
    text-align: right;
    white-space: nowrap;
  }

  th.col-state {
    text-align: right;
  }

  .no-results {
    margin-top: 1.5rem;
    padding: 1rem;
    text-align: center;
    font-family: "IBM Plex Mono", monospace;
    font-size: 13px;
    color: var(--text-muted);
    border: 1px dashed var(--border);
  }

  @media (max-width: 768px) {
    .col-author {
      display: none;
    }

    th.col-author {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .site-title {
      font-size: 22px;
    }

    .col-num {
      width: 45px;
    }

    td,
    th {
      padding: 0.75rem 0.75rem;
    }

    .col-title a {
      font-size: 13px;
    }

    .tag-filters,
    .author-filters {
      gap: 0.375rem;
    }

    .tag-filter,
    .author-filter {
      font-size: 10px;
      padding: 0.25rem 0.5rem;
    }
  }
</style>
