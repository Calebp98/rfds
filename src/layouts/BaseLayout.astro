---
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AI Security RFDs</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <style set:html={`
      @font-face {
        font-family: 'Departure Mono';
        src: url('${base}fonts/DepartureMono-Regular.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
    `}></style>
    <main class="container">
      <slot />
    </main>
    <footer class="footer">
      <div class="container">
        <div class="contributors">
          <span class="contributors-label">Ideas contributed by people from</span>
          <div class="contributor-logos">
            <img src={`${base}logos/ARIA.jpg`} alt="ARIA" class="contributor-logo" />
            <img src={`${base}logos/rand.png`} alt="RAND Corporation" class="contributor-logo" />
            <img src={`${base}logos/FLI.png`} alt="Future of Life Institute" class="contributor-logo" />
            <img src={`${base}logos/IFP.png`} alt="Institute for Progress" class="contributor-logo" />
            <img src={`${base}logos/AMODO.webp`} alt="Amodo" class="contributor-logo" />
            <img src={`${base}logos/oxford_martin_ai_governance_initiative_logo.jpeg`} alt="Oxford Martin AI Governance Initiative" class="contributor-logo" />
            <img src={`${base}logos/university-of-oxford-logo-1.webp`} alt="University of Oxford" class="contributor-logo" />
            <img src={`${base}logos/AI_Sec_Forum.jpg`} alt="AI Security Forum" class="contributor-logo" />
          </div>
        </div>
        <a href="https://aisecurity.forum" class="logo">AI SECURITY FORUM</a>
        <span class="footer-text"><a href="https://aisecurity.forum/substack">Subscribe to our substack</a> to hear about future events.</span>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .logo {
    font-family: 'Departure Mono', monospace;
    font-size: 66px;
    color: var(--blue);
    letter-spacing: 0.05em;
  }

  .logo:hover {
    text-decoration: none;
    color: var(--blue-dark);
  }


  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  main.container {
    padding-bottom: 4rem;
    padding-top: 2rem;
    background: var(--bg-primary);
    position: relative;
  }

  .footer {
    border-top: 2px solid var(--blue);
    padding: 1.5rem 0;
    margin-top: 2rem;
    text-align: center;
    background: var(--bg-primary);
    position: relative;
  }

  .footer .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 12px;
    height: 12px;
    background: var(--bg-primary);
    border: 2px solid var(--blue);
    border-radius: 0;
  }

  .footer-text {
    color: var(--text-secondary);
    font-size: 13px;
    font-family: 'IBM Plex Mono', monospace;
  }

  .footer-text a {
    color: var(--blue);
  }

  .footer-text a:hover {
    color: var(--blue-dark);
  }

  .contributors {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .contributors-label {
    display: block;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 12px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
  }

  .contributor-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .contributor-logo {
    height: 40px;
    width: auto;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.2s;
  }

  .contributor-logo:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 1rem;
    }

    .logo {
      font-size: 33px;
    }

    .contributor-logos {
      gap: 1.5rem;
    }

    .contributor-logo {
      height: 30px;
    }
  }
</style>
