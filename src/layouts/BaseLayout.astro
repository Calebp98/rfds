---
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AI Security RFDs</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Press+Start+2P&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="header">
      <div class="pink-bar"></div>
      <div class="container">
        <a href="https://aisecurity.forum" class="logo">AI SECURITY FORUM</a>
      </div>
    </header>
    <div class="decorative-line">
      <span class="dot"></span>
      <span class="line"></span>
      <span class="dot"></span>
    </div>
    <main class="container">
      <slot />
    </main>
    <footer class="footer">
      <div class="container">
        <span class="footer-text"><a href="https://aisecurity.forum/substack">Subscribe to our substack</a> to hear about future events.</span>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .header {
    background: var(--bg-primary);
    position: relative;
    padding: 1.25rem 0;
    margin-bottom: 0;
  }

  .pink-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: var(--pink);
    border-bottom: 1px solid var(--pink-border);
  }

  .header .container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.85rem;
    color: var(--blue);
    letter-spacing: 0.05em;
  }

  .logo:hover {
    text-decoration: none;
    color: var(--blue-dark);
  }

  .decorative-line {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 1.5rem;
    gap: 0.5rem;
  }

  .decorative-line .dot {
    width: 6px;
    height: 6px;
    background: var(--blue);
  }

  .decorative-line .line {
    flex: 1;
    max-width: 600px;
    height: 2px;
    background: repeating-linear-gradient(
      90deg,
      var(--blue) 0px,
      var(--blue) 4px,
      transparent 4px,
      transparent 8px
    );
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  main.container {
    padding-bottom: 4rem;
    padding-top: 1.5rem;
    background: var(--bg-primary);
    position: relative;
  }

  .footer {
    border-top: 2px solid var(--blue);
    padding: 1.5rem 0;
    margin-top: 2rem;
    text-align: center;
    background: var(--bg-primary);
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 12px;
    height: 12px;
    background: var(--bg-primary);
    border: 2px solid var(--blue);
    border-radius: 0;
  }

  .footer-text {
    color: var(--text-secondary);
    font-size: 13px;
    font-family: 'IBM Plex Mono', monospace;
  }

  .footer-text a {
    color: var(--blue);
  }

  .footer-text a:hover {
    color: var(--blue-dark);
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 1rem;
    }

    .logo {
      font-size: 0.7rem;
    }

    .decorative-line {
      padding: 0.75rem 1rem;
    }
  }
</style>
