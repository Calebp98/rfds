---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    number: string;
    author: string;
    state: string;
    tags: string[];
    created: string;
    updated?: string;
  };
}

const { frontmatter } = Astro.props;
const stateClass = `state state-${frontmatter.state}`;
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={`RFD ${frontmatter.number}: ${frontmatter.title}`}>
  <article class="rfd">
    <a href={base} class="back-link">← ALL RFDS</a>

    <header class="rfd-header">
      <div class="rfd-top">
        <span class="rfd-number">RFD {frontmatter.number}</span>
        <span class={stateClass}>{frontmatter.state}</span>
      </div>
      <h1>{frontmatter.title}</h1>

      <div class="meta">
        <span class="meta-item">
          <span class="meta-label">AUTHOR</span>
          <span class="meta-value">{frontmatter.author}</span>
        </span>
        <span class="meta-item">
          <span class="meta-label">CREATED</span>
          <span class="meta-value">{frontmatter.created}</span>
        </span>
        {frontmatter.updated && (
          <span class="meta-item">
            <span class="meta-label">UPDATED</span>
            <span class="meta-value">{frontmatter.updated}</span>
          </span>
        )}
      </div>

      <div class="tags">
        {frontmatter.tags.map((tag: string) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="rfd-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .rfd {
    max-width: 720px;
  }

  .back-link {
    display: inline-block;
    font-size: 12px;
    font-family: 'IBM Plex Mono', monospace;
    color: var(--blue);
    margin-bottom: 2rem;
    letter-spacing: 0.05em;
    padding: 0.4rem 0.75rem;
    border: 1px solid var(--blue);
    transition: background 0.15s;
  }

  .back-link:hover {
    background: rgba(74, 125, 201, 0.1);
    text-decoration: none;
  }

  .rfd-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 2px dashed var(--blue);
    position: relative;
  }

  .rfd-header::after {
    content: '◇';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--bg-primary);
    padding: 0 0.5rem;
    color: var(--blue);
    font-size: 14px;
  }

  .rfd-top {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .rfd-number {
    color: var(--blue);
    font-size: 12px;
    font-family: 'IBM Plex Mono', monospace;
    font-weight: 600;
    letter-spacing: 0.1em;
  }

  h1 {
    margin-top: 0;
    margin-bottom: 1.25rem;
    font-size: 22px;
    font-family: 'Departure Mono', monospace;
    line-height: 1.5;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .meta-label {
    font-size: 10px;
    color: var(--text-muted);
    font-family: 'IBM Plex Mono', monospace;
    letter-spacing: 0.1em;
  }

  .meta-value {
    font-size: 13px;
    color: var(--text-primary);
    font-family: 'IBM Plex Mono', monospace;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    font-size: 11px;
    background: rgba(123, 104, 201, 0.1);
    color: var(--purple);
    border: 1px solid rgba(123, 104, 201, 0.4);
    font-family: 'IBM Plex Mono', monospace;
    text-transform: lowercase;
  }

  .rfd-content {
    line-height: 1.75;
  }

  .rfd-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(74, 125, 201, 0.3);
  }

  .rfd-content :global(h2:first-child) {
    margin-top: 0;
  }

  .rfd-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
  }

  .rfd-content :global(p) {
    color: var(--text-secondary);
  }

  .rfd-content :global(ul),
  .rfd-content :global(ol) {
    margin-bottom: 1.25rem;
  }

  .rfd-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .rfd-content :global(a) {
    color: var(--blue);
  }

  .rfd-content :global(blockquote) {
    border-left: 3px solid var(--blue);
    margin: 1.5rem 0;
    padding: 0.5rem 1rem;
    background: rgba(74, 125, 201, 0.05);
  }

  .rfd-content :global(blockquote p) {
    margin-bottom: 0;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 16.5px;
    }

    .meta {
      gap: 1rem;
    }

    .rfd-content :global(h2) {
      font-size: 0.9rem;
    }
  }
</style>
